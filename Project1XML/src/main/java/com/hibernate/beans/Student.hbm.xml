<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
  
  <hibernate-mapping>
	<class name="com.hibernate.beans.Student" table="Studentdata">
		<id name="rollno" column="roll_no">
			<!--   -->	
			<generator class="increment"></generator>
		</id>
		<property name="fname" column="f_name"></property>
		<property name="lname" column="l_name"></property>
		<property name="grade" column="grade"></property>
		
		
		
	</class>  
  </hibernate-mapping>